# 使用 Debian 镜像以获得更好的二进制文件兼容性 (glibc)
FROM nginx:1.27

# 安装必要工具
RUN apt-get update && apt-get install -y wget unzip iproute2 curl bash && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# 设置工作目录
WORKDIR /home/choreo/app

# 确保所有文件被复制到这里
COPY . .

# 授权目录权限给非 root 用户 (UID 10001)
RUN addgroup --gid 10001 choreo && \
    adduser --uid 10001 --gid 10001 --disabled-password --gecos "" choreo && \
    chown -R 10001:10001 /home/choreo/app /tmp /var/cache/nginx /var/run /var/log/nginx

# 赋予脚本执行权限
RUN chmod +x entrypoint.sh

USER 10001
EXPOSE 8080

ENTRYPOINT [ "./entrypoint.sh" ]
